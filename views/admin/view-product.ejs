<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your view product</title>

  <!-- Link your CSS file here -->
  <link rel="stylesheet" type="text/css" href="/css/main.css">

  <!-- Additional styles or CDN links can be added here if needed -->
  <script>
    function confirmDelete(event) {
      event.preventDefault(); // Prevent default form submission
      if (confirm("Are you sure you want to delete this product?")) {
        event.target.submit(); // Submit the form after confirmation
      }
    }
  </script>
  

</head>
<body>
<%- include('partials/header') %>
<%- include('partials/aside-nav') %>
  <main class="main-wrap">
   
   
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Product List</h2>

            </div>
           
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div>
                
                    <a href="/admin/add-product" class="btn btn-primary btn-sm rounded">Create new</a>
                    <a href="/admin/dash" class="btn btn-secondary btn-sm rounded">Back</a>

                </div> 
            </header> <!-- card-header end// -->
            <div class="card-body">
                    <article class="itemlist">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col"> Image</th>
                                        <th scope="col"> Title</th>
                                        <th scope="col"> Category</th>
                                        <th scope="col"> Size</th>
                                        <th scope="col"> Color</th>
                                        <th scope="col"> Brand</th>
                                        <th scope="col"> Description</th>
                                        <th scope="col"> Sub Category</th>
                                        <th scope="col"> Stock</th>
                                        <th scope="col"> Price</th>
                                        <th scope="col"> Multiple Images</th>
                                        <th scope="col"> Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (products && products.length > 0) { %>
                                        <% products.forEach(product => { %>
                                        <tr>
                                            <td><% product.images.forEach(image => { %>
                                                <img src="/uploads/<%= image %>" class="img-thumbnail" alt="">
                                              <% }); %></td>
                                            <td><%= product.product_title %></td>
                                            <td><%= product.product_category%></td>
                                            <td><%= product.sizes %></td>
                                            <td><%= product.color %></td>
                                            <td><%= product.brand %></td>
                                            <td><%= product.description %></td>
                                            <td><%= product.subcategory %></td>
                                            <td><%= product.stock %></td>
                                            <td><%= product.price %></td>
                                            <td><% product.mimages.forEach(image => { %>
                                                <img src="/uploads/<%= image %>" class="img-thumbnail" alt="">
                                              <% }); %></td>
                                            <td>
                                                <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                                    <i class="material-icons md-edit"></i> Edit
                                                </a>
                                                <form action="/admin/products/<%= product._id %>?_method=DELETE" method="POST" onsubmit="return confirmDelete();">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit">Delete</button>
                                                  </form>
                                                  
                                            </td>
                                        </tr>
                                    <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="10">No products found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </article>
                    <div class="pagination-area mt-30 mb-50">
                        <nav aria-label="Page navigation example">
                          <ul class="pagination justify-content-start">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                              </li>
                            <% } %>
                          </ul>
                        </nav>
                      </div>
                      
 
</section> <!-- content-main end// -->
<footer class="main-footer font-xs">
    <div id="success-message" class="alert alert-success" role="alert">
        <% if (typeof successMessage !== 'undefined') { %>
          <%= successMessage %>
        <% } %>
      </div>
</footer>
      
  </main>
  </body>

  </html>
  
  


